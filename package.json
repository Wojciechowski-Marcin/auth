{
  "name": "ts-express-docker-template",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "start": "if [ $NODE_ENV = 'production' ]; then npm run prod; else npm run dev; fi",
    "dev": "npm run watch-ts",
    "prod": "npm run build && npm run serve",
    "serve": "node dist/index.js",
    "build": "tsc",
    "watch-ts": "ts-node-dev src/index.ts",
    "lint": "npm run eslint && npm run prettier",
    "eslint": "eslint src/**/*.{js,jsx,ts,tsx} --fix",
    "prettier": "npx prettier --write .",
    "test": "jest --coverage --verbose --watchAll=false",
    "watch-test": "jest --forceExit --verbose --watchAll"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^5.10.0"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.2.2",
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.3",
    "@types/jest": "^25.1.4",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^12.12.31",
    "@types/supertest": "^2.0.10",
    "@types/uniqid": "^5.2.0",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.9",
    "prettier": "^2.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3",
    "uniqid": "^5.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/**/*.{js,jsx,ts,tsx}": [
      "eslint src/**/*.{js,jsx,ts,tsx} --fix",
      "npx prettier --write"
    ]
  }
}
